<div class="row">
  <div class="col-sm-12">
    <h1>Products <%= link_to 'New Product', new_admin_product_path, class: 'btn btn-success' %></h1>
  </div>
</div>

<hr />

<table class="table table-striped">
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category</th>
    <th>Actions</th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= image_tag "/uploads/#{product.id}", size: '100' %></td>
        <td><%= product.title_en %></td>
        <td><%= product.description_en %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name_en %></td>
        <td>
          <%= link_to 'View', admin_product_path(product) %>
          <%= link_to 'Edit', edit_admin_product_path(product) %>
          <%= link_to 'Delete', admin_product_path(product),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this product?'} %>
        </td>
      </tr>
  <% end %>

</table>

<table class="table table-striped">
  <tr>
    <th>Картинка</th>
    <th>Название</th>
    <th>Описание</th>
    <th>Цена</th>
    <th>Категория</th>
    <th>Действия</th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= image_tag "/uploads/#{product.id}", size: '100' %></td>
        <td><%= product.title_ru %></td>
        <td><%= product.description_ru %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name_ru %></td>
        <td>
          <%= link_to 'Просмотр', admin_product_path(product) %>
          <%= link_to 'Редактировать', edit_admin_product_path(product) %>
          <%= link_to 'Удалить', admin_product_path(product),
                      method: :delete,
                      data: {confirm: 'Вы уверены?'} %>
        </td>
      </tr>
  <% end %>

</table>
