<h2 class="text-center"><%= t 'edit_profile' %></h2>
<hr/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>

  <div class="form-group <%= 'has-error' if resource.errors[:name].any? %>">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
      <%= render 'shared/field_errors', object: resource, field_name: :name %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if resource.errors[:email].any? %>">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: 'form-control' %>
      <%= render 'shared/field_errors', object: resource, field_name: :email %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if resource.errors[:password].any? %>">
    <%= f.label :password, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
      <%= render 'shared/field_errors', object: resource, field_name: :password %>
      <i class="help-block">(leave blank if you don't want to change it)</i>
      <% if @minimum_password_length %>
        <span class="help-block">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if resource.errors[:password_confirmation].any? %>">
    <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
      <%= render 'shared/field_errors', object: resource, field_name: :password_confirmation %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if resource.errors[:current_password].any? %>">
    <%= f.label :current_password, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control' %>
      <%= render 'shared/field_errors', object: resource, field_name: :current_password %>
      <i class="help-block">(we need your current password to confirm your changes)</i>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit (t 'user_update_button'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
