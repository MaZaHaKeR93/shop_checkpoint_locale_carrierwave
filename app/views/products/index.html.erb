<div class="jumbotron">
  <h1><%= t '.greeting_panel_caption' %></h1>
  <p><%= t '.greeting_panel_text' %></p>
  <p><a href="#" class="btn btn-primary btn-lg"><%= t '.greeting_panel_button' %></a></p>
</div>

<div class="row">

  <div class="col-sm-3">
    <div class="panel panel-default" id="cart">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'products.index.list_of_categories' %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% Category.all.each do |category| %>
            <li><a href="#"><%= category.send("name_" + "#{I18n.locale}") %></a></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-12 products-pagination">
        <%= will_paginate @products %>
      </div>
    </div>

    <div class="row">
        <% @products.each do |product| %>

        <div class="col-sm-6 product-item">
          <div class="panel panel-default">
            <div class="panel-body">
              <h3><%= product.send("title_" + "#{I18n.locale}") %></h3>
              <div class="img" style="background-image: url('<%= image_path product_image(product.id) %>');"></div>
              <h4>$<%= product.price %></h4>
              <p>
                <button class="btn btn-default"><%= t '.view_item' %></button>
                <button class="btn btn-primary"><%= t '.add_item_to_cart' %></button>
              </p>
            </div>
          </div>
        </div>

        <% end %>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= will_paginate @products %>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
      <div class="panel panel-default" id="cart">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t '.list_of_cart' %></h3>
        </div>
        <div class="panel-body">
          <%= t '.cart_is_empty' %>
        </div>
      </div>
  </div>
</div>
